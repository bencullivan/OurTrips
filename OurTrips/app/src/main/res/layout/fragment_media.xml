<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MediaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@color/colorSecondaryDark"
            android:contentDescription="@string/pictures"
            android:padding="@dimen/padding_dp"
            android:src="@mipmap/photo_icon" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@color/colorSecondaryDark"
            android:contentDescription="@string/videos"
            android:padding="@dimen/padding_dp"
            android:src="@mipmap/video_icon" />

    </LinearLayout>

</FrameLayout>