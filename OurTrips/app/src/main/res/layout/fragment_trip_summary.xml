<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SummaryFragment"
    android:background="@color/colorSecondaryDark">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSecondaryDark"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/summary_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias=".1"
            android:textSize="@dimen/header_sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/colorSecondary"/>

        <TextView
            android:id="@+id/sum_start_date_text"
            android:layout_marginTop="40dp"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@+id/summary_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecondary"
            android:textAlignment="center"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/sum_end_date_text"
            android:layout_marginTop="40dp"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@+id/sum_start_date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecondary"
            android:textAlignment="center"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/sum_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/sum_end_date_text"
            android:layout_marginTop="40dp"
            android:paddingHorizontal="10dp"
            android:textColor="@color/colorSecondary"
            android:textAlignment="center"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/sum_location_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/sum_overview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_secondary_button"
            android:textAllCaps="false"
            android:text="@string/view_map"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorSecondaryDark" />

        <Button
            android:id="@+id/sum_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/sum_location_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_secondary_button"
            android:textAllCaps="false"
            android:text="@string/edit"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorSecondaryDark" />

        <Button
            android:id="@+id/sum_add_tripper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/sum_edit_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_secondary_button"
            android:textAllCaps="false"
            android:text="@string/add_tripper"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorSecondaryDark" />

        <Button
            android:id="@+id/delete_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/sum_add_tripper"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_secondary_button"
            android:textAllCaps="false"
            android:text="@string/delete_trip"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/colorSecondaryDark" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>