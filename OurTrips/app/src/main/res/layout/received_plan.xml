<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--    NOTE: this layout is loosely based off of the layout tutorial that
        can be found here https://blog.sendbird.com/android-chat-tutorial-building-a-messaging-ui/-->

    <TextView
        android:id="@+id/plan_received_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:maxWidth="100dp"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        android:background="@drawable/plan_shape"
        android:textColor="@color/colorSecondary"
        android:textSize="15sp"
        android:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/received_tripper_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/plan_received_message"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/colorSecondaryDark"
        android:fontFamily="sans-serif-medium"
        android:textSize="12sp" />

</androidx.constraintlayout.widget.ConstraintLayout>